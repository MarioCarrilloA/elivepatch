import os

#===============================================================================
#
# MAIN
#
#-------------------------------------------------------------------------------

root = None
try:
    root = os.environ['ROOT']
except KeyError:
    pass

main = Main(ArgsParser())
try:
    main()
except KeyboardInterrupt:
    print('Interrupt received, exiting...')